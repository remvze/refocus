---
import { Container } from './container';
import LightRays from './rays';
---

<Container fullWidth>
  <div class="hero">
    <div class="effect">
      <LightRays client:load followMouse={false} />
    </div>

    <div class="logo">
      <img alt="Refocus Logo" height={45} src="/logo.svg" width={38.97} />
    </div>

    <h2 class="title"><span>Refocus</span></h2>
    <h1 class="desc">A no-bullshit pomodoro timer.</h1>
  </div>
</Container>

<style>
  .hero {
    position: relative;
    padding: 100px 0 30px;
    margin-bottom: 20px;
    text-align: center;

    & .effect {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
      opacity: 0.6;
    }

    & .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
      margin-bottom: 20px;

      & img {
        height: 44px;
      }
    }

    & .title {
      font-family: var(--font-display);
      font-size: var(--font-2xlg);
      font-weight: 400;

      & span {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-neutral-600)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & .desc {
      margin-top: 8px;
      color: var(--color-foreground-subtle);
    }
  }
</style>
